<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Limousine" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorPrimaryVariant">@color/app_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_theme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Limousine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Limousine.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Limousine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_card_view.style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <!-- Define a custom style for the TimePicker -->
    <style name="TimePickerStyle">
        <!-- Color of the hour numbers -->
        <item name="android:textColorPrimary">#FF0000</item>

        <!-- Color of the minute numbers -->
        <item name="android:textColorSecondary">#00FF00</item>

        <!-- Color of the selected hour and minute -->
        <item name="colorControlActivated">#0000FF</item>
    </style>

    <style name="AppTheme.NavigationItemStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomNavigationItemTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Other attributes of your theme -->
            <item name="colorAccent">@color/app_theme</item>
            <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_theme</item>
        <!-- Add other attributes as needed -->
    </style>

    <!-- res/values/styles.xml -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/app_theme</item>
        <!-- Add other attributes as needed -->
    </style>

    <style name="TimePickerDialogTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/admin</item>
        <!-- Add other attributes as needed -->
    </style>

    <style name="DatePickerDialogTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/admin</item>
        <!-- Add other attributes as needed -->
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="StripeTheme" parent="Theme.AppCompat.Light">
        <!-- Customize the theme attributes as needed -->
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>